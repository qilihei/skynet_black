{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["assets/scripts/*"],
      "@protocol/*": ["protocol/*"]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "assets/scripts/**/*",
    "protocol/**/*"
  ],
  "exclude": [
    "node_modules",
    "temp",
    "library",
    "local",
    "build"
  ]
}
